{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "bundler",
    "types": [
      "vite/client",
    ],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["src/scripts/lib/*"],
      "@components/*": ["src/scripts/components/*"],
      "@pages/*": ["src/scripts/pages/*"],
      "@public/*": ["public/*"],
      "@hooks/*": ["src/scripts/hooks/*"]
    },

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
  },
  "include": ["src", "public", "vite-env.d.ts", "src/scripts/i18n/locales/*.json"],
  "exclude": ["dist", "node_modules"]
}
