{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Decopon Windows",
  "version": "0.1.0",
  "identifier": "com.decopon.windows",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Decopon Windows",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "sidecar": [
    {
      "name": "decopon-axum",
      "path": "../../../backend/axum"
    },
    {
      "name": "migration",
      "path": "../../../backend/axum/migration"
    }
  ]
}
