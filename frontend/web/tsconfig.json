{
	"compilerOptions": {
		"allowJs": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"strict": true,
		"isolatedModules": true,
		"target": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"noEmit": true,
		"paths": {
			"@/*": ["./src/ts/*"],
			// "ziggy-js": ["./vendor/tightenco/ziggy"]
		},
		"typeRoots": ["./node_modules/@types", "src/ts/types"]
	},
	"include": [
		"src/ts/**/*.ts",
		"src/ts/**/*.tsx",
		"src/ts/**/*.d.ts",
		"src/ts/**/*.js"
	]
}
