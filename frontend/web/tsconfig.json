{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "isolatedModules": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@pages/*": ["../core/src/scripts/pages/*"],
      "@components/*": ["../core/src/scripts/components/*"],
      "@public/*": ["../core/public/*"],
      "@core/*": ["../core/src/*"]
    },
    "typeRoots": ["./node_modules/@types", "../core/src/scripts/types"]
  },
  "include": [
    "../core/src/**/*.ts",
    "../core/src/**/*.tsx",
    "../core/src/**/*.d.ts",
    "../core/src/**/*.js",
    "../core/src/**/*.jsx",
    ".storybook/*.ts",
    ".storybook/**/*.tsx",
    "stories/*.stories.tsx",
    "stories/**/*.tsx",
    "vite/*.ts"
  ]
}
