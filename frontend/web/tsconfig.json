// /frontend/web/tsconfig.json
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "../core/src/scripts/types"],
    "paths": {
      "@/*": ["../core/src/*"],
      "@pages/*": ["../core/src/scripts/pages/*"],
      "@components/*": ["../core/src/scripts/components/*"],
      "@public/*": ["../core/public/*"]
    }
  },
  "include": [
    "../core/src/**/*.ts",
    "../core/src/**/*.tsx",
    "../core/src/**/*.d.ts",
    "../core/src/**/*.js",
    "../core/src/**/*.jsx",
    "../core/vite/*.ts",
    ".storybook/*.ts",
    ".storybook/**/*.tsx",
    "stories/*.stories.tsx",
    "stories/**/*.tsx"
  ]
}
