# IP address and port to bind
AXUM_IP=127.0.0.1
AXUM_PORT=3000
# Comma-separated list of allowed origins for CORS
AXUM_ALLOWED_ORIGINS=http://localhost:5173
# URL of the frontend application
FRONTEND_URL=http://localhost:5173
# SeaOrm configuration
AXUM_DATABASE_URL="sqlite://../database/db.sqlite?mode=rwc"

# JWT secret
AXUM_JWT_SECRET="your_jwt_secret"

# Single user account defaults
APP_SINGLE_USER_MODE=0
APP_SINGLE_USER_EMAIL=single-user@localhost
APP_SINGLE_USER_PASSWORD=decopon-local-password
APP_SINGLE_USER_NAME="Decopon User"
APP_SINGLE_USER_LOCALE=en
APP_SINGLE_USER_WORK_TIME=25
APP_SINGLE_USER_BREAK_TIME=5

# smtp server configuration
AXUM_SMTP_SERVER="smtp.example.com"
AXUM_SMTP_USERNAME="your_smtp_username"
AXUM_SMTP_PASSWORD="your_smtp_password"

# Mail configuration
AXUM_MAIL_FROM_NAME="Your Name"
AXUM_MAIL_FROM_EMAIL="yourname@example.com"

# Mock email for testing
AXUM_MOCK_EMAIL="test@example.com"

# Tracing configuration
RUST_LOG="info,decopon_axum=trace,axum=info,tower_http=info,hyper=warn"
