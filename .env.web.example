# Decopon Web (PostgreSQL) configuration - multi user deployment
APP_NAME=Decopon
APP_ENV=local
APP_MODE=web

APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

AXUM_IP=0.0.0.0
AXUM_PORT=3000
AXUM_ALLOWED_ORIGINS=http://localhost:5173
AXUM_DATABASE_URL="postgres://postgres:postgres@localhost:5432/decopon"
AXUM_JWT_SECRET="your_web_jwt_secret"

AXUM_DISABLE_SMTP=0
AXUM_SMTP_SERVER="smtp.example.com"
AXUM_SMTP_USERNAME="your_smtp_username"
AXUM_SMTP_PASSWORD="your_smtp_password"
AXUM_MAIL_FROM_NAME="Your Name"
AXUM_MAIL_FROM_EMAIL="yourname@example.com"
AXUM_MOCK_EMAIL="test@example.com"

RUST_LOG="info,decopon_axum=trace,axum=info,tower_http=info,hyper=warn"

VITE_APP_NAME="${APP_NAME}"
VITE_APP_ENV="${APP_ENV}"
VITE_API_BASE_URL="${APP_URL}"
VITE_GUEST_EMAIL='guest@example.com'
VITE_GUEST_PASSWORD='guestP@$$w0rd'
VITE_APP_SINGLE_USER_MODE="0"
VITE_APP_TRANSPORT="http"
VITE_LOG_LEVEL="info"
