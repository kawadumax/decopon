# Example configuration for the web backend build (PostgreSQL / multi user)
APP_NAME=Decopon
APP_ENV=local
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

AXUM_IP=0.0.0.0
AXUM_PORT=3000
AXUM_ALLOWED_ORIGINS=http://localhost:5173
AXUM_DATABASE_URL="postgres://postgres:postgres@localhost:5432/decopon"

APP_SINGLE_USER_MODE=0
APP_SINGLE_USER_EMAIL=demo@decopon.dev
APP_SINGLE_USER_PASSWORD=decopon-demo-password
APP_SINGLE_USER_NAME="Decopon Demo User"
APP_SINGLE_USER_LOCALE=en
APP_SINGLE_USER_WORK_TIME=25
APP_SINGLE_USER_BREAK_TIME=5

AXUM_DISABLE_SMTP=0
AXUM_JWT_SECRET="your_jwt_secret"
AXUM_SMTP_SERVER="smtp.example.com"
AXUM_SMTP_USERNAME="your_smtp_username"
AXUM_SMTP_PASSWORD="your_smtp_password"
AXUM_MAIL_FROM_NAME="Your Name"
AXUM_MAIL_FROM_EMAIL="yourname@example.com"
AXUM_MOCK_EMAIL="test@example.com"

# Tracing configuration
RUST_LOG="info,decopon_axum=trace,axum=info,tower_http=info,hyper=warn"

# Vite (used when hosting the demo web frontend)
VITE_APP_NAME="${APP_NAME}"
VITE_APP_ENV="${APP_ENV}"
VITE_API_BASE_URL="${APP_URL}"
VITE_GUEST_EMAIL='guest@example.com'
VITE_GUEST_PASSWORD='guestP@$$w0rd'
VITE_APP_SINGLE_USER_MODE="${APP_SINGLE_USER_MODE}"
VITE_LOG_LEVEL="info"
