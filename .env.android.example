# Decopon Android (Tauri) configuration - SQLite + single user bootstrap
APP_NAME=Decopon
APP_ENV=local
APP_MODE=local

APP_URL=http://127.0.0.1:3000
FRONTEND_URL=http://127.0.0.1:1420

AXUM_IP=127.0.0.1
AXUM_PORT=3000
# Allow all origins while developing against the mobile dev server.
AXUM_ALLOWED_ORIGINS=
AXUM_DATABASE_URL="sqlite://../database/db.sqlite?mode=rwc"
AXUM_JWT_SECRET="your_android_jwt_secret"

APP_SINGLE_USER_MODE=1
APP_SINGLE_USER_EMAIL=single-user@localhost
APP_SINGLE_USER_PASSWORD=decopon-local-password
APP_SINGLE_USER_NAME="Decopon User"
APP_SINGLE_USER_LOCALE=en
APP_SINGLE_USER_WORK_TIME=25
APP_SINGLE_USER_BREAK_TIME=5

AXUM_DISABLE_SMTP=1
AXUM_SMTP_SERVER=
AXUM_SMTP_USERNAME=
AXUM_SMTP_PASSWORD=
AXUM_MAIL_FROM_NAME="Decopon Android"
AXUM_MAIL_FROM_EMAIL="android@decopon.local"
AXUM_MOCK_EMAIL="test@example.com"

# Tauri mobile hot reload / LAN dev server
# TAURI_DEV_HOST=0.0.0.0

# Android toolchain paths
ANDROID_HOME="C:\\Android\\Sdk"
JAVA_HOME="C:\\Program Files\\Java\\jdk-17"
NDK_HOME="${ANDROID_HOME}\\ndk\\26.1.10909125"

RUST_LOG="info,decopon_axum=trace,axum=info,tower_http=info,hyper=warn"

VITE_APP_NAME="${APP_NAME}"
VITE_APP_ENV="${APP_ENV}"
VITE_API_BASE_URL="${APP_URL}"
VITE_GUEST_EMAIL='guest@example.com'
VITE_GUEST_PASSWORD='guestP@$$w0rd'
VITE_APP_SINGLE_USER_MODE="${APP_SINGLE_USER_MODE}"
VITE_APP_TRANSPORT="ipc"
VITE_LOG_LEVEL="info"
